<shaders>
	<shader>
		<inputs>
			<input>
				<default>0</default>
				<hint>useAsBool</hint>
				<type>int</type>
				<name>matte</name>
				<help>Use matte</help>
			</input>
			<input>
				<default>[ 0.0, 0.0, 0.0 ]</default>
				<type>vector</type>
				<name>normalCamera</name>
			</input>
			<input>
				<name>diffuseValue</name>
				<min>0</min>
				<default>0.8</default>
				<max>1</max>
				<type>float</type>
				<help>Diffuse reflectivity multiplier</help>
			</input>
			<input>
				<default>[1.0, 1.0, 1.0]</default>
				<hint>useAsColor</hint>
				<type>vector</type>
				<name>diffuseColor</name>
				<help>Color</help>
			</input>
			<input>
				<default>0</default>
				<type>float</type>
				<name>roughness</name>
				<help>Surface roughness. Mix between lambert and orenNayar.</help>
			</input>
			<input>
				<default>0</default>
				<type>float</type>
				<name>backlighting</name>
				<help>Backlighting, show light though a surface (poor mans translucency).</help>
			</input>
			<input>
				<name>translucency</name>
				<min>0</min>
				<default>0</default>
				<max>1</max>
				<type>float</type>
				<help>Translucency.</help>
			</input>
			<input>
				<default>[0.0, 0.0, 0.0]</default>
				<hint>useAsColor</hint>
				<type>vector</type>
				<name>translucencyColor</name>
				<help>Translucency color</help>
			</input>
			<input>
				<name>specular1</name>
				<min>0</min>
				<default>0.5</default>
				<max>1</max>
				<type>float</type>
				<help>Specularity 1 value</help>
			</input>
			<input>
				<name>specularIOR1</name>
				<min>0.001</min>
				<default>1.5</default>
				<max>3</max>
				<hint>softmax</hint>
				<type>float</type>
				<help>Specularity 1 index of reflection</help>
			</input>
			<input>
				<default>1</default>
				<hint>useAsBool</hint>
				<type>int</type>
				<name>specularUseFresnel1</name>
				<help>Specularity 1 use fresnel</help>
			</input>
			<input>
				<name>reflectivityAtZeroDeg</name>
				<min>0</min>
				<default>0</default>
				<max>1</max>
				<type>float</type>
				<help>Reflectivity at 0 Degree</help>
			</input>
			<input>
				<name>roughness1</name>
				<min>0.001</min>
				<default>0.1</default>
				<max>1</max>
				<type>float</type>
				<help>Roughness</help>
			</input>
			<input>
				<default>[0.0, 0.0, 0.0]</default>
				<hint>useAsColor</hint>
				<type>vector</type>
				<name>specularColor1</name>
				<help>Specular color 1</help>
			</input>
			<input>
				<name>anisotropy1</name>
				<min>-1</min>
				<default>0</default>
				<max>1</max>
				<type>float</type>
				<help>Anisotropy</help>
			</input>
			<input>
				<default>ggx</default>
				<options>['sharp', 'beckmann', 'ggx']</options>
				<type>string</type>
				<name>reflectionMdf</name>
				<help>Microfacet distribution to use: Specular, Beckmann or GGX.</help>
			</input>
			<input>
				<name>refractionIOR</name>
				<min>-2</min>
				<default>1.3</default>
				<max>2</max>
				<hint>softminmax</hint>
				<type>float</type>
				<help>Refraction Index</help>
			</input>
			<input>
				<default>[1.0, 1.0, 1.0]</default>
				<hint>useAsColor</hint>
				<type>vector</type>
				<name>refractionColor</name>
				<help>Refraction color</help>
			</input>
			<input>
				<name>absorption</name>
				<min>0</min>
				<default>0</default>
				<max>1</max>
				<hint>softmax</hint>
				<type>float</type>
				<help>Absorption cross section</help>
			</input>
			<input>
				<default>[0.0, 0.0, 0.0]</default>
				<hint>useAsColor</hint>
				<type>vector</type>
				<name>absorptionColor</name>
				<help>Absorption color</help>
			</input>
			<input>
				<name>refractivity</name>
				<min>0</min>
				<default>0</default>
				<max>1</max>
				<type>float</type>
				<help>Refractivity</help>
			</input>
			<input>
				<name>refractionRoughness</name>
				<min>0.001</min>
				<default>0</default>
				<max>1</max>
				<type>float</type>
				<help>Roughness</help>
			</input>
			<input>
				<default>ggx</default>
				<options>['sharp', 'beckmann', 'ggx']</options>
				<type>string</type>
				<name>refractionMdf</name>
				<help>Microfacet distribution to use: Specular, Beckmann or GGX.</help>
			</input>
			<input>
				<default>0</default>
				<hint>useAsBool</hint>
				<type>int</type>
				<name>SSS1</name>
				<help>Use SSS 1</help>
			</input>
			<input>
				<default>[0.0, 0.0, 0.0]</default>
				<hint>useAsColor</hint>
				<type>vector</type>
				<name>SSS1Color</name>
				<help>Subsurface color</help>
			</input>
			<input>
				<name>SSS1Weight</name>
				<min>0</min>
				<default>0</default>
				<max>1</max>
				<type>float</type>
				<help>Subsurface color Multiplier</help>
			</input>
			<input>
				<default>[0.0, 0.0, 0.0]</default>
				<hint>useAsColor</hint>
				<type>vector</type>
				<name>SSS1Radius</name>
				<help>Radius per Color</help>
			</input>
			<input>
				<name>SSS1RadiusMultiplier</name>
				<min>0</min>
				<default>1</default>
				<max>3</max>
				<hint>softmax</hint>
				<type>float</type>
				<help>Subsurface color Multiplier</help>
			</input>
			<input>
				<default>[0.0, 0.0, 0.0]</default>
				<hint>useAsColor</hint>
				<type>vector</type>
				<name>emissionColor</name>
				<help>Emission Color</help>
			</input>
			<input>
				<name>emissionMultiplier</name>
				<min>0</min>
				<default>1</default>
				<max>3</max>
				<hint>softmax</hint>
				<type>float</type>
				<help>Emission Color Multiplier</help>
			</input>
		</inputs>
		<name>uberShader</name>
		<outputs>
			<output>
				<type>output pointer</type>
				<name>outColor</name>
			</output>
		</outputs>
		<mayaId>0</mayaId>
		<mayaClassification>Appleseed/material:shader/surface:swatch/AppleseedRenderSwatch</mayaClassification>
		<help>uber shader</help>
	</shader>
</shaders>